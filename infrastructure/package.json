{
  "name": "synapse-spa-infrastructure",
  "version": "1.0.0",
  "description": "CDK infrastructure for Synapse SPA deployment",
  "bin": {
    "synapse-spa-infrastructure": "bin/app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "deploy": "cdk deploy --require-approval never",
    "destroy": "cdk destroy",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "bootstrap": "cdk bootstrap",
    "deploy:dev": "cdk deploy --context environment=dev --require-approval never",
    "deploy:staging": "cdk deploy --context environment=staging --require-approval never",
    "deploy:prod": "cdk deploy --context environment=prod --require-approval never"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "aws-cdk": "2.155.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "dependencies": {
    "aws-cdk-lib": "2.155.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
